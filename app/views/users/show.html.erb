<% content_for :header do %>
    <%= link_to "Home", root_url %>
<% end %>


<% content_for :styles do %>
    
    .posts{
        padding: 10px 17%;
        display: flex;
        flex-direction: column;
        gap: 17px;
    }
    .post{
        border: 2px solid var(--secondary-color);
        border-radius: 11px;
        color: var(--text-color);

        padding: 2%;
    }

    .post>.title{
        font-size: 1.3rem;
        font-weight: 700;

        padding-bottom: 10px;
    }

    .post-content{
        padding: 10px 17px;
        line-height: 1.33;

        border-radius: 11px;
        color: var(--primary-color);
        background-color: var(--secondary-color);

        box-shadow: 0px 0px 5px black;
    }

    .post-content>.content{
        font-size: 1.1rem;
        padding-bottom: 7px;
    }

    .post-info>.post-user,
    .post-links>a{
        color: var(--accent-color)
    }
    .post-info>.post-user:hover,
    .post-links>a:hover{
        color: var(--primary-color);
        text-decoration: underline;
    }
    .user-show-heading{
        font-size: 2rem;
        font-weight: 700;
    }
    .user-show-name-img{
        display: flex;
        justify-content: flex-start;

        padding: 3rem 5rem;
        gap: 3rem;
    }
    .user-show-actions{
        display: flex;
        flex-direction: column;
        justify-content: center;

        gap: 10px;
    }

    .user-show-name{
        font-size: 2rem;
    }

    .user-show-following{
        color: var(--accent-color-2);
        border-bottom: 2px solid var(--accent-color-2);
        border-right: 2px solid var(--accent-color-2);
        padding-right: 2px;
        padding-bottom: 2px;
    }

    .following{
        display: flex;
        flex-direction: column;
        gap: 5px;
    }

    .follow-btn{
    background-color: var(--accent-color);
    border: 2px solid var(--accent-color-2);
    color: var(--primary-color);
    font-size: 0.95rem;

    width: fit-content;
    padding: 3px 16px;
    border-radius: 7px
    }
<% end %>



<div class="user-show-name-img">
    <%= image_tag @user.gravatar_url(:rating => 'R', :secure => true) %>
    <div class="user-show-actions">
        <div class="user-show-name"><%=@user.name%></div>
        <div class="following">
            <div class="user-show-following"><%=@user.following.count%> <%= link_to "Following", following_user_path(@user) %> </div>
            <div class="user-show-following"><%=@user.followers.count%> <%= link_to "Followers", followers_user_path(@user) %> </div>
            <%= render 'follow_btn' %>
        </div>
    </div>
</div>

<div class="posts">
    <div class="user-show-heading"><%= @user.id == current_user.id ? "Your " : @user.name+("'s ") %>posts :</div>
    <% @posts.each do |post|%>
        <%= render 'post',{post: post}%>
    <%end%>
</div>
